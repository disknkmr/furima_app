.SignupPage
  %header.Signup-header
    = render "layout/header"

  %main.Signup-main
    %section.Signup-main__information
      %h2.Signup-main__information__title
        会員情報入力
      .Signup-main__information__form
        .FormField
          .FormField__content
            %label ニックネーム
            %span.FormField__content__require 必須
            %br
            %input{"type": "text", "placeholder": "例) フリマ太郎"}
          .FormField__content
            %label メールアドレス
            %span.FormField__content__require 必須
            %br
            %input{"type": "text", "placeholder": "PC・携帯どちらでも可"}
          .FormField__content
            %label パスワード
            %span.FormField__content__require 必須
            %br
            %input{"type": "text", "placeholder": "7文字以上の半角英数字"}
          .FormField__content
            %lavel パスワード(確認)
            %span.FormField__content__require 必須
            %br
            %input{"type": "text", "placeholder": "7文字以上の半角英数字"}

            .FormField__content
              %lavel 名前(全角)
              %span.FormField__content__require 必須
              %br
              %input{"type": "text", "size": "10", "placeholder": "例) 山田"}
              %input{"type": "text", "size": "10", "placeholder": "例) 太郎"}
            .FormField__content
              %lavel 名前(ふりがな)
              %span.FormField__content__require 必須
              %br
              %input{"type": "text", "size": "10", "placeholder": "例) ヤマダ"}
              %input{"type": "text", "size": "10", "placeholder": "例) タロウ"}
            .FormField__content
              %lavel 生年月日
              %span.FormField__content__require 必須
              %br
              %input{"type": "text"}
              .Birthday__select__wrap
              .Clearfix
            .FormField__content
              %p.FormField__content__text--center
            .FormField__content
              %lavel 郵便番号
              %span.FormField__content__require 必須
              %br
              %input{"type": "text", "placeholder": "例）810-0801"}
            .FormField__content
              %lavel 都道府県
              %span.FormField__content__require 必須
              %br
              %input{"type": "text"}
            .FormField__content
              %lavel 市町村
              %span.FormField__content__require 必須
              %br
              %input{"type": "text", "placeholder": "例) 福岡市"}
            .FormField__content
              %lavel 番地
              %span.FormField__content__require 必須
              %br
              %input{"type": "text", "placeholder": "例) 博多区中洲5丁目4-18"}
            .FormField__content
              %lavel 建物名
              %span.FormField__content__optional 任意
              %br
              %input{"type": "text", "placeholder": "例) 吉本ビル101"}
            .FormField__content
              %lavel 電話番号
              %span.FormField__content__optional 任意
              %br
              %input{"type": "text", "placeholder": "例）090-XXXX-XXXX"}
            %input.Signup-btn{"type": "submit", "value": "登録"}